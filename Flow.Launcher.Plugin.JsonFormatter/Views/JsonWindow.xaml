<Window x:Class="Flow.Launcher.Plugin.JsonFormatter.Views.JsonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flow.Launcher.Plugin.JsonFormatter.Views"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="JsonWindow" Height="800" Width="600"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
        Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}">
    <DockPanel>
        <avalonEdit:TextEditor x:Name="JsonEditor"
                       FontFamily="{DynamicResource {x:Static SystemFonts.MessageFontFamilyKey}}"
                       FontSize="{DynamicResource {x:Static SystemFonts.MessageFontSizeKey}}"
                       Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                       Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"
                       BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                       ShowLineNumbers="True"
                       SyntaxHighlighting="JavaScript"/>
    </DockPanel>
</Window>
